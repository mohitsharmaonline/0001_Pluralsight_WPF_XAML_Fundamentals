<Window x:Class="WPF_Intro_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Intro_Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!--you can notice that OK ext is there in the
        body of the button, rather than as an attribute.
        Button just don't have to contain plain text. Button
        supports something known as the content model. lot's 
        of things in WPF supports this. and basically it says
        there are various things that can go inside. There
        are various different things that can form the content.
        -->
        <Button Width="75" Height="23">
            <Ellipse Fill="Yellow" 
                     Width="40"
                     Height="15"/>
        </Button>
    </Grid>
</Window>
